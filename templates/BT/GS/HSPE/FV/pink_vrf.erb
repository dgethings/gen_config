interfaces {
	<%= c.ifd %> {
		unit <%= c.ifl %> {
			vlan-id <%= c.ifl %>;
			family inet {
				mtu 1500;
				address 64.2.69.1/30;
				filter {
					input pink-IN-500k;
				}
			}
		}
	}
	lo0 {
		unit <%= c.lo0_unit %> {
			family inet {
				filter {
					input protect-RE-VRF;
				}
				address <%= c.lo0_ip_addr %>/32;
			}
		}
	}
}
class-of-service {
	interfaces {
		<%= c.ifd %> {
			unit <%= c.ifl %> {
				output-traffic-control-profile pink-POUT-500k;
			}
		}
	}
}
routing-instances {
	pink_<%= c.rt %> {
		instance-typ;
		interface lo0.<%= c.lo0_unit %>;
		interface <%= c.ifd %>.<%= c.ifl %>;
		route-distinguisher 12641:<%= c.rd %>;
		vrf-import pink_import_map;
		vrf-export pink_export_map;
		vrf-table-label;
		routing-options {
			auto-export;
			multipath;
			static {
				route <%= c.switch1 %>/32 {
					next-hop 64.2.69.2;
					bfd-liveness-detection {
						no-adaptation;
						minimum-interval 999;
						multiplier 3;
					}
					community 12641:65055;
				}
				route <%= c.switch2 %>/32 {
					next-hop 64.2.69.2;
					tag 101;
					bfd-liveness-detection {
						no-adaptation;
						minimum-interval 999;
						multiplier 3;
					}
					community 12641:65055;
				}
				route 64.2.69.2/32 {
					next-hop 64.2.69.2;
					no-readvertise;
					bfd-liveness-detection {
						no-adaptation;
						minimum-interval 999;
						multiplier 3;
					}
				}
			}
		}
	}
}
